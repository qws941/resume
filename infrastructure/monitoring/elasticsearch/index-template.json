{
  "index_patterns": ["resume-logs-*"],
  "priority": 500,
  "template": {
    "settings": {
      "index": {
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "refresh_interval": "30s",
        "default_pipeline": "resume-logs-ingest"
      }
    },
    "mappings": {
      "dynamic": true,
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "timestamp": {
          "type": "date"
        },
        "level": {
          "type": "keyword"
        },
        "log": {
          "properties": {
            "level": {
              "type": "keyword"
            }
          }
        },
        "message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 1024
            }
          }
        },
        "correlationId": {
          "type": "keyword"
        },
        "traceId": {
          "type": "keyword"
        },
        "traceparent": {
          "type": "keyword"
        },
        "tracestate": {
          "type": "keyword"
        },
        "trace": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "correlation_id": {
              "type": "keyword"
            }
          }
        },
        "service": {
          "properties": {
            "name": {
              "type": "keyword"
            }
          }
        },
        "serviceName": {
          "type": "keyword"
        },
        "ecs": {
          "properties": {
            "version": {
              "type": "keyword"
            }
          }
        },
        "route": {
          "type": "keyword"
        },
        "statusCode": {
          "type": "integer"
        },
        "duration": {
          "type": "float"
        }
      }
    }
  },
  "_meta": {
    "description": "Index template for resume structured logs",
    "owner": "infrastructure/monitoring"
  }
}
