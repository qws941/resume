{
  "service": "resume-platform",
  "window": "30d",
  "slos": [
    {
      "name": "availability",
      "target": 99.9,
      "sli": "(total_requests - 5xx_requests) / total_requests",
      "errorBudget": {
        "unit": "minutes",
        "monthly": 43.8
      }
    },
    {
      "name": "latency_p95",
      "target": "<200ms",
      "sli": "histogram_quantile(0.95, request_duration_ms_bucket)"
    },
    {
      "name": "error_rate",
      "target": "<=0.1%",
      "sli": "5xx_requests / total_requests",
      "notes": "Computed from server-side responses only"
    }
  ]
}
