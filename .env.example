# ----------------------------------------------------------------------------
# Resume Project Environment Template
# ----------------------------------------------------------------------------
# Copy to .env for local development. Never commit real secret values.
# Cloudflare Workers production secrets should be set with:
#   npx wrangler secret put <NAME> --config typescript/job-automation/workers/wrangler.jsonc
# ----------------------------------------------------------------------------

# General
NODE_ENV=development
DEPLOYED_AT=1970-01-01T00:00:00.000Z
DEBUG=false
VERBOSE=false

# ----------------------------------------------------------------------------
# Cloudflare account/deployment credentials
# ----------------------------------------------------------------------------
CLOUDFLARE_API_TOKEN=cf_api_token_replace_me
CLOUDFLARE_ACCOUNT_ID=cf_account_id_replace_me
CLOUDFLARE_API_KEY=cf_global_api_key_replace_me
CLOUDFLARE_EMAIL=cloudflare_email_replace_me@example.com

# ----------------------------------------------------------------------------
# Job dashboard worker secrets (typescript/job-automation/workers)
# ----------------------------------------------------------------------------
# Admin dashboard/API token (required)
ADMIN_TOKEN=admin_token_replace_me
# HMAC secret for inbound webhook signature verification
WEBHOOK_SECRET=webhook_secret_replace_me
# Secret header used by auth-sync scripts
AUTH_SYNC_SECRET=auth_sync_secret_replace_me
# Base64-encoded 32-byte AES key for cookie/session encryption
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=base64_32_byte_encryption_key_replace_me

# Slack integrations
SLACK_TOKEN=xoxb_replace_me
SLACK_CHANNEL=C0123456789
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/REPLACE/ME

# ----------------------------------------------------------------------------
# Portfolio worker/runtime secrets (typescript/portfolio-worker)
# ----------------------------------------------------------------------------
# Session signing secret for dashboard auth cookies
SIGNING_SECRET=session_signing_secret_replace_me
# Optional n8n webhook base used by automation trigger endpoint
N8N_WEBHOOK_BASE=https://n8n.example.com/webhook
# Optional Cloudflare stats endpoint credentials
CF_API_KEY=cf_api_key_for_stats_replace_me
CF_EMAIL=cf_email_for_stats_replace_me@example.com

# Elasticsearch / observability
ELASTICSEARCH_URL=https://elasticsearch.example.com
ELASTICSEARCH_API_KEY=elasticsearch_api_key_replace_me
ELASTICSEARCH_INDEX=logs-resume-worker
LOKI_API_KEY=loki_api_key_replace_me

# ----------------------------------------------------------------------------
# Additional platform secrets (tracked in SECURITY_WARNING.md)
# ----------------------------------------------------------------------------
GRAFANA_API_KEY=grafana_api_key_replace_me
N8N_API_KEY=n8n_api_key_replace_me
EVOLUTION_API_KEY=evolution_api_key_replace_me
MORPH_API_KEY=morph_api_key_replace_me
OPENROUTER_API_KEY=openrouter_api_key_replace_me
INFISICAL_JWT_PROVIDER_AUTH_SECRET=infisical_jwt_secret_replace_me
HYCU_DB_PASSWORD=hycu_db_password_replace_me
GITLAB_TOKEN=gitlab_token_replace_me

# Optional local automation login
WANTED_PASSWORD=wanted_password_replace_me
