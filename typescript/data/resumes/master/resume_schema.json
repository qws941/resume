{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume Data Schema",
  "description": "JSON Schema for validating resume_data.json structure and content",
  "type": "object",
  "required": ["personal", "education", "summary", "current", "careers", "skills"],
  "properties": {
    "personal": {
      "type": "object",
      "description": "Personal information",
      "required": ["name", "email", "phone"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Full name"
        },
        "birthDate": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$",
          "description": "Birth date in YYYY.MM.DD format"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\d{3}-\\d{4}-\\d{4}$",
          "description": "Phone number in XXX-XXXX-XXXX format"
        },
        "address": {
          "type": "string",
          "maxLength": 500,
          "description": "Physical address"
        },
        "github": {
          "type": "string",
          "description": "GitHub username or URL"
        }
      },
      "additionalProperties": true
    },
    "education": {
      "type": "object",
      "description": "Education information",
      "required": ["school", "major"],
      "properties": {
        "school": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "School/University name"
        },
        "major": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Major/Department"
        },
        "startDate": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}$",
          "description": "Start date in YYYY.MM format"
        },
        "endDate": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}$",
          "description": "End date in YYYY.MM format"
        },
        "status": {
          "type": "string",
          "enum": ["재학중", "졸업", "수료", "중퇴"],
          "description": "Education status in Korean"
        },
        "highSchool": {
          "type": "string",
          "description": "High school name"
        },
        "highSchoolGraduation": {
          "type": "string",
          "pattern": "^\\d{4}$",
          "description": "High school graduation year (YYYY format)"
        }
      },
      "additionalProperties": true
    },
    "summary": {
      "type": "object",
      "description": "Career summary",
      "required": ["totalExperience", "expertise"],
      "properties": {
        "totalExperience": {
          "type": "string",
          "description": "Total years/months of experience (e.g., '7년 10개월')"
        },
        "experienceStart": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}$",
          "description": "Career start date in YYYY.MM format"
        },
        "grade": {
          "type": ["string", "null"],
          "description": "Grade or level (optional)"
        },
        "expertise": {
          "type": "array",
          "minItems": 1,
          "description": "Areas of expertise",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "profileStatement": {
          "type": "string",
          "description": "Professional summary/tagline"
        }
      },
      "additionalProperties": true
    },
    "current": {
      "type": "object",
      "description": "Current employment",
      "properties": {
        "company": {
          "type": "string",
          "description": "Current company name"
        },
        "department": {
          "type": "string",
          "description": "Department name"
        },
        "position": {
          "type": "string",
          "description": "Job position/title"
        },
        "startDate": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}$",
          "description": "Start date in YYYY.MM format"
        },
        "participationMonths": {
          "type": "integer",
          "minimum": 0,
          "description": "Months employed"
        },
        "participationRate": {
          "type": ["number", "null"],
          "description": "Employment percentage (optional)"
        }
      },
      "additionalProperties": true
    },
    "careers": {
      "type": "array",
      "minItems": 1,
      "description": "Career history",
      "items": {
        "type": "object",
        "required": ["company", "period", "role"],
        "properties": {
          "company": {
            "type": "string",
            "minLength": 1,
            "description": "Company name"
          },
          "period": {
            "type": "string",
            "pattern": "^\\d{4}\\.\\d{2}\\s*~\\s*(\\d{4}\\.\\d{2}|현재)$",
            "description": "Period in format 'YYYY.MM ~ YYYY.MM' or 'YYYY.MM ~ 현재'"
          },
          "duration": {
            "type": "string",
            "description": "Duration (e.g., '1년 6개월')"
          },
          "project": {
            "type": "string",
            "description": "Project name"
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "description": "Job role/position"
          },
          "client": {
            "type": "string",
            "description": "Client name"
          },
          "description": {
            "type": "string",
            "description": "Job description"
          }
        },
        "additionalProperties": true
      }
    },
    "projects": {
      "type": "array",
      "description": "Project history",
      "items": {
        "type": "object",
        "required": ["name", "role", "technologies"],
        "properties": {
          "period": {
            "type": "string",
            "pattern": "^\\d{4}\\.\\d{2}\\s*~\\s*(\\d{4}\\.\\d{2}|현재)$",
            "description": "Project period"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Project name"
          },
          "client": {
            "type": "string",
            "description": "Client name"
          },
          "technologies": {
            "type": "array",
            "minItems": 1,
            "description": "Technologies used",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "os": {
            "type": "string",
            "description": "Operating systems used"
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "description": "Role in project"
          },
          "description": {
            "type": "string",
            "description": "Project description"
          }
        },
        "additionalProperties": true
      }
    },
    "careerGap": {
      "type": "object",
      "description": "Career gap explanation (optional)",
      "properties": {
        "period": {
          "type": "string",
          "pattern": "^\\d{4}\\.\\d{2}\\s*~\\s*\\d{4}\\.\\d{2}$",
          "description": "Gap period"
        },
        "reason": {
          "type": "string",
          "description": "Reason for gap"
        },
        "result": {
          "type": "string",
          "description": "Outcome of gap period"
        }
      },
      "additionalProperties": true
    },
    "certifications": {
      "type": "array",
      "description": "Professional certifications",
      "items": {
        "type": "object",
        "required": ["name", "issuer"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Certification name"
          },
          "issuer": {
            "type": "string",
            "minLength": 1,
            "description": "Issuing organization"
          },
          "date": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}\\.\\d{2}$",
            "description": "Issue date in YYYY.MM format (null if not yet obtained)"
          },
          "expirationDate": {
            "type": ["string", "null"],
            "pattern": "^\\d{4}\\.\\d{2}$",
            "description": "Expiration date in YYYY.MM format (null if non-expiring or not yet obtained)"
          },
          "credentialUrl": {
            "type": ["string", "null"],
            "format": "uri",
            "description": "URL to verify the credential (null if not available)"
          },
          "status": {
            "type": "string",
            "enum": ["active", "expired", "준비중"],
            "description": "Certification status"
          }
        },
        "additionalProperties": true
      }
    },
    "skills": {
      "type": "object",
      "description": "Skills grouped by category",
      "properties": {
        "observability": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Observability and monitoring skills"
        },
        "cloud": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Cloud and infrastructure skills"
        },
        "devops": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "DevOps and CI/CD skills"
        },
        "automation": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Automation and scripting skills"
        },
        "database": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Database skills"
        },
        "programming": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Programming languages"
        },
        "monitoring": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Monitoring and observability tools"
        },
        "security": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Security tools and practices"
        },
        "compliance": {
          "anyOf": [
            { "type": "array", "items": { "type": "string" } },
            {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "icon": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "level": { "type": "string" }
                        },
                        "required": ["name"]
                      }
                    ]
                  }
                }
              }
            }
          ],
          "description": "Compliance and certification knowledge"
        }
      },
      "additionalProperties": true
    },
    "personalProjects": {
      "type": "array",
      "description": "Personal/side projects",
      "items": {
        "type": "object",
        "required": ["name", "description", "technologies"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Project name"
          },
          "period": {
            "type": "string",
            "pattern": "^\\d{4}\\.\\d{2}\\s*~\\s*(\\d{4}\\.\\d{2}|현재)$",
            "description": "Project period"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Project description"
          },
          "technologies": {
            "type": "array",
            "minItems": 1,
            "description": "Technologies used",
            "items": { "type": "string" }
          },
          "icon": {
            "type": "string",
            "description": "Emoji icon"
          },
          "tagline": {
            "type": "string",
            "description": "One-liner tagline"
          },
          "metrics": {
            "type": "object",
            "description": "Key metrics"
          },
          "businessImpact": {
            "type": "string",
            "description": "Business impact statement"
          }
        },
        "additionalProperties": true
      }
    },
    "hero": {
      "type": "object",
      "description": "Hero section data for portfolio",
      "properties": {
        "badge": {
          "type": "string",
          "description": "Professional badge/title"
        },
        "title": {
          "type": "string",
          "description": "Name for hero display"
        },
        "titleEn": {
          "type": "string",
          "description": "English title"
        },
        "subtitle": {
          "type": "string",
          "description": "Subtitle/tagline"
        }
      },
      "additionalProperties": true
    },
    "sectionDescriptions": {
      "type": "object",
      "description": "Section descriptions for portfolio",
      "properties": {
        "resume": { "type": "string" },
        "projects": { "type": "string" },
        "infrastructure": { "type": "string" },
        "skills": { "type": "string" },
        "certifications": { "type": "string" },
        "contact": { "type": "string" }
      },
      "additionalProperties": true
    },
    "achievements": {
      "type": "array",
      "description": "Key achievements",
      "items": { "type": "string" }
    },
    "infrastructure": {
      "type": "array",
      "description": "Infrastructure/services running",
      "items": {
        "type": "object",
        "properties": {
          "icon": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" },
          "url": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "contact": {
      "type": "object",
      "description": "Contact information",
      "required": ["email"],
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "github": {
          "type": "string",
          "description": "GitHub profile URL"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Website URL"
        },
        "monitoring": {
          "type": "string",
          "format": "uri",
          "description": "Monitoring dashboard URL"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
