{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://resume.jclee.me/schemas/sessions.schema.json",
  "title": "Multi-Platform Sessions",
  "description": "Shared session format between Go CLI and Node.js MCP server. File path: ~/.opencode/data/sessions.json",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/$defs/PlatformSession"
  },
  "propertyNames": {
    "enum": ["wanted", "saramin", "jobkorea", "remember", "linkedin"]
  },
  "$defs": {
    "PlatformSession": {
      "type": "object",
      "description": "Session data for a single platform",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "User email for session identification"
        },
        "cookies": {
          "type": "string",
          "description": "HTTP cookie string for authenticated requests"
        },
        "token": {
          "type": "string",
          "description": "Optional Bearer token or API key"
        },
        "timestamp": {
          "type": "integer",
          "description": "Unix timestamp in milliseconds when session was created/updated"
        }
      },
      "required": ["cookies", "timestamp"],
      "additionalProperties": false
    }
  },
  "$comment": "TTL: 24 hours (86400000ms)",
  "examples": [
    {
      "wanted": {
        "email": "user@example.com",
        "cookies": "session_id=abc123; token=xyz789",
        "timestamp": 1737600000000
      },
      "saramin": {
        "cookies": "PHPSESSID=def456",
        "timestamp": 1737500000000
      }
    }
  ]
}
