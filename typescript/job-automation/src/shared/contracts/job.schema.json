{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Job Posting Contract",
  "description": "Standardized job posting data structure",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique job identifier"
    },
    "platform": {
      "type": "string",
      "enum": ["wanted", "saramin", "jobkorea", "remember", "linkedin"]
    },
    "position": {
      "type": "string",
      "description": "Job title"
    },
    "company": {
      "type": "string",
      "description": "Company name"
    },
    "location": {
      "type": "string",
      "description": "Job location"
    },
    "description": {
      "type": "string",
      "description": "Full job description"
    },
    "requirements": {
      "type": "string",
      "description": "Job requirements"
    },
    "techStack": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required technologies"
    },
    "experienceMin": {
      "type": "number",
      "minimum": 0,
      "description": "Minimum years of experience"
    },
    "experienceMax": {
      "type": "number",
      "minimum": 0,
      "description": "Maximum years of experience"
    },
    "salary": {
      "type": "object",
      "properties": {
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "KRW"
        }
      }
    },
    "dueDate": {
      "type": "string",
      "format": "date-time",
      "description": "Application deadline"
    },
    "sourceUrl": {
      "type": "string",
      "format": "uri",
      "description": "Original job posting URL"
    },
    "scrapedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When job was scraped"
    }
  },
  "required": ["id", "platform", "position", "company"]
}
