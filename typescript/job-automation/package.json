{
  "name": "@resume/job-automation",
  "version": "1.4.0",
  "description": "MCP Server for Wanted Korea job platform (원티드)",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "wanted-resume": "src/cli.js"
  },
  "scripts": {
    "build": "echo 'Pure ESM - no build required'",
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test 'src/shared/**/*.test.js'",
    "test:all": "node --test 'src/**/*.test.js'",
    "test:coverage": "node --test --experimental-test-coverage 'src/shared/**/*.test.js'",
    "test:e2e": "node src/e2e.test.js",
    "test:pipeline": "node src/pipeline.test.js",
    "cli": "node src/cli.js",
    "export": "node src/cli.js export",
    "sync": "node src/cli.js sync",
    "pipeline": "node src/cli.js pipeline",
    "get-cookies": "node scripts/get-cookies.js",
    "dashboard": "node src/server/index.js",
    "dashboard:dev": "node --watch src/server/index.js",
    "server": "node src/server/index.js",
    "server:dev": "node --watch src/server/index.js",
    "auto-apply": "node src/auto-apply/cli/index.js",
    "auto-apply:dry": "node src/auto-apply/cli/index.js --dry-run",
    "sync:platforms": "node platforms/sync-platforms.js",
    "sync:platforms:status": "node platforms/sync-platforms.js status",
    "sync:platforms:preview": "node platforms/sync-platforms.js preview",
    "auto": "node scripts/auto-all.js",
    "auto:sync": "node scripts/auto-all.js --sync",
    "auto:verify": "node scripts/auto-all.js --verify",
    "cookies:extract": "node scripts/extract-cookies-cdp.js",
    "cookies:import": "node scripts/import-cookies-manual.js"
  },
  "keywords": [
    "mcp",
    "wanted",
    "job",
    "korea",
    "채용"
  ],
  "author": "jclee",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.2.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@modelcontextprotocol/sdk": "^1.2.0",
    "fastify": "^5.2.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.4.0",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.9.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^8.0.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "puppeteer": "npm:rebrowser-puppeteer@^24.37.2"
  },
  "optionalDependencies": {
    "@cloudflare/puppeteer": "^0.0.15"
  },
  "devDependencies": {
    "better-sqlite3": "^12.6.0",
    "playwright": "^1.58.2",
    "ws": "^8.19.0"
  }
}
